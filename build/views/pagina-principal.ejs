<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./parties/header.ejs") %>
    <title>Landing page</title>
    <link rel="stylesheet" href="css/div.css" />
  </head>
  <body>
    <header id="header"><%- include("./parties/head.ejs") %></header>

    <div id="columna_de_juegos">
      <% juegos.map(({ game, uuid_front_end, image }) => { %> <% if(!image) { %>
      <p>Caratula no agreagada</p>
      <% } else { %>
      <div>
        <p><%- game %></p>
        <img src="<%= image %>" alt="<%= game %>" />
        <div id="boton_editar-crear">
          <form
            method="POST"
            action="/eliminar/<%= uuid_front_end %>?_method=DELETE"
          >
            <button type="submit">Eliminar</button>
          </form>

          <a href="/editar/<%= uuid_front_end %>">Editar</a>
        </div>
      </div>
      <% } %> <% }) %>
    </div>
  </body>
</html>
